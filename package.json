    "karma-browserstack-launcher": "^1.5.1",
    "karma-firefox-launcher": "^1.1.0",
    "lerna": "3.20.2",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.17.0",
    "prettier-check": "^2.0.0",
    "replace-in-file": "^4.0.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "typedoc": "^0.14.2",
